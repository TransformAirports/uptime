{
  "output": {
    "filePath": "repomix-output.txt",
    "style": "plain",
    "headerText": "Files in the /functions folder are Firebase Functions",
    "removeComments": false,
    "removeEmptyLines": false,
    "topFilesLength": 5,
    "showLineNumbers": false
  },
  "include": [
    "dev/**/*.js",
    "dev/**/*.html",
    "dev/**/*.css",
    "functions/**/*.js"
  ],
  "ignore": {
    "useGitignore": false,
    "useDefaultPatterns": false,
    "customPatterns": [
      "**/*.min.js",
      "**/*.min.css",
      "functions/node_modules/**/*"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  }
}